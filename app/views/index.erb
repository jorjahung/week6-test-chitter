<% if current_user %>
	<div id="signed-in">
	<div id="signed-in-left">
		<div id="form-container"> 
				<div id="new-link">
				<center><h1><%= current_user.full_name %></h1>
				@<%= current_user.username %>
				
				<form action="/peeps" method="post">
					<input type="text" name="message" placeholder="Peep peep"><br>
					<input type="submit" class="button" value="Add peep"><br>
				</form>
				</center>
				</div>
			</div>
		</div>
	<div id="signed-in-right">
		<div id="peeps-container">
			<h1>Peeps</h1>
			<ul id='peeps'>
				<% @peeps.sort_by{ |peep| peep.created_at}.reverse.each do |peep| %>
					<%= partial :peep, :locals => {:peep => peep, :user => @users}  %>
				<% end %>
			</ul>
		</div>
	</div>
	</div>
<% else %>
	<div id="peeps-container">
	<h1>Peeps</h1>
	<ul id='peeps'>
		<% @peeps.sort_by{ |peep| peep.created_at}.reverse.each do |peep| %>
			<%= partial :peep, :locals => {:peep => peep, :user => @users}  %>
		<% end %>
	</ul>
	</div>
			    
<% end %>




